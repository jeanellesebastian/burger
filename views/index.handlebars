<h1>Burgers!</h1>

<section class="left">

  <h2>Burgers that are devoured!</h2>
  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">DEVOUR TIME!</button>
          </form>

          {{> burgers/delete-burger}}
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</section>

  <section class="right">
  <h2>burgers that are devoured!</h2>

  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
            <button type="submit">DON'T EAT!</button>
          </form>

          {{> burgers/delete-burger}}
        </li>
      {{/if}}
    {{/each}}
  </ul>
</section>

<section class="addBurger">
<h2>Add a burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button type="submit">Add burger</button>
</form>
</section>