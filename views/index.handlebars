<div class="container-fluid">
  <div class="container">
    
    <div class="header">
      <img src="/assets/img/cute-burger.png" width="150px" id="burger">
      <h1>Eat-Da-Burger!</h1>
    </div>



    <div class="row">
      <div class="col-xs-6">

        {{!-- <h2>Burgers that are devoured!</h2> --}}

        <ul>
          {{#each burgers}} {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">DEVOUR TIME!</button>
            </form>

            {{> burgers/delete-burger}}
          </li>
          {{/unless}} {{/each}}
        </ul>

      </div>


      <div class="col-xs-6">
        {{!-- <h2>burgers that are devoured!</h2> --}}

        <ul>
          {{#each burgers}} {{#if this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
              <button type="submit">DON'T EAT!</button>
            </form>

            {{> burgers/delete-burger}}
          </li>
          {{/if}} {{/each}}
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-6 col-md-4"></div>
      <div class="col-xs-6 col-md-4">
        <h2>Add a burger</h2>
        <form class="create-update-form" action="/" method="POST">

          <div class="form-group">
            <label for="ca">burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>

          <div class="form-group">
            <label for="slee">devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> devoured!<br>
            <input type="radio" name="devoured" value="0"> Not Devoured
          </div>

          <button type="submit">Add burger</button>
        </form>
      </div>
      <div class="col-xs-6 col-md-4"></div>
    </div>
  </div>
</div>